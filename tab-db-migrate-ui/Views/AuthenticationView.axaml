<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:TabDbMigrateUI.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="600"
             x:Class="TabDbMigrateUI.Views.AuthenticationView"
             x:DataType="vm:AuthenticationViewModel">

    <Border Padding="20" Background="#F5F5F5">
        <StackPanel MaxWidth="540" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16">
            
            <!-- Logo/Title Section -->
            <StackPanel Spacing="4" HorizontalAlignment="Center">
                <TextBlock Text="ðŸ“Š" FontSize="36" HorizontalAlignment="Center"/>
                <TextBlock Text="Tableau Connection Manager" 
                           FontSize="24" 
                           FontWeight="SemiBold" 
                           HorizontalAlignment="Center"
                           Foreground="#1F77B4"/>
                <TextBlock Text="Manage database connections across your Tableau site" 
                           FontSize="13" 
                           HorizontalAlignment="Center"
                           Foreground="#666666"
                           Margin="0,2,0,0"/>
            </StackPanel>
            
            <!-- Login Form -->
            <Border Background="White" 
                    CornerRadius="0" 
                    Padding="28" 
                    BorderBrush="#CCCCCC"
                    BorderThickness="1">
                
                <StackPanel Spacing="16">
                    
                    <TextBlock Text="Sign In" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Foreground="#333333"
                               Margin="0,0,0,8"/>
                    
                    <!-- Server URL -->
                    <StackPanel Spacing="5">
                        <TextBlock Text="Tableau Server URL:" 
                                   FontWeight="Normal" 
                                   FontSize="12"
                                   Foreground="#333333"/>
                        <TextBox Text="{Binding ServerUrl}" 
                                 Watermark="https://your-server.online.tableau.com"
                                 IsEnabled="{Binding !IsAuthenticating}"
                                 Height="26"
                                 CornerRadius="0"
                                 BorderThickness="1"
                                 BorderBrush="#999999"/>
                    </StackPanel>

                    <!-- PAT Token Name -->
                    <StackPanel Spacing="5">
                        <TextBlock Text="PAT Token Name:" 
                                   FontWeight="Normal" 
                                   FontSize="12"
                                   Foreground="#333333"/>
                        <TextBox Text="{Binding TokenName}" 
                                 Watermark="Your token name"
                                 IsEnabled="{Binding !IsAuthenticating}"
                                 Height="26"
                                 CornerRadius="0"
                                 BorderThickness="1"
                                 BorderBrush="#999999"/>
                    </StackPanel>

                    <!-- PAT Token Secret -->
                    <StackPanel Spacing="5">
                        <TextBlock Text="PAT Token Secret:" 
                                   FontWeight="Normal" 
                                   FontSize="12"
                                   Foreground="#333333"/>
                        <TextBox Text="{Binding TokenSecret}" 
                                 Watermark="Your token secret"
                                 PasswordChar="â—"
                                 IsEnabled="{Binding !IsAuthenticating}"
                                 Height="26"
                                 CornerRadius="0"
                                 BorderThickness="1"
                                 BorderBrush="#999999"/>
                    </StackPanel>

                    <!-- Site Name -->
                    <StackPanel Spacing="5">
                        <TextBlock Text="Site Name (Optional):" 
                                   FontWeight="Normal" 
                                   FontSize="12"
                                   Foreground="#333333"/>
                        <TextBox Text="{Binding SiteName}" 
                                 Watermark="Leave blank for default site"
                                 IsEnabled="{Binding !IsAuthenticating}"
                                 Height="26"
                                 CornerRadius="0"
                                 BorderThickness="1"
                                 BorderBrush="#999999"/>
                        <TextBlock Text="Leave blank for default site" 
                                   FontSize="11" 
                                   Foreground="#666666"
                                   FontStyle="Italic"/>
                    </StackPanel>

                    <!-- Remember Credentials -->
                    <CheckBox IsChecked="{Binding RememberCredentials}"
                              IsEnabled="{Binding !IsAuthenticating}"
                              Margin="0,4,0,0">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <TextBlock Text="ðŸ’¾" FontSize="14" VerticalAlignment="Center"/>
                            <TextBlock Text="Remember my credentials" 
                                       FontSize="13"
                                       Foreground="#334E68"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </CheckBox>

                    <!-- Connect Button -->
                    <Button Command="{Binding ConnectCommand}"
                            Content="Connect"
                            HorizontalAlignment="Left"
                            HorizontalContentAlignment="Center"
                            Width="120"
                            Height="28"
                            Margin="0,8,0,0"
                            FontWeight="Normal"
                            FontSize="12"
                            CornerRadius="0"
                            Background="#E0E0E0"
                            Foreground="#000000"
                            BorderBrush="#999999"
                            BorderThickness="1">
                        <Button.Styles>
                            <Style Selector="Button:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="#D0D0D0"/>
                                <Setter Property="TextBlock.Foreground" Value="#000000"/>
                            </Style>
                            <Style Selector="Button:pressed /template/ ContentPresenter">
                                <Setter Property="Background" Value="#C0C0C0"/>
                                <Setter Property="TextBlock.Foreground" Value="#000000"/>
                            </Style>
                            <Style Selector="Button:disabled /template/ ContentPresenter">
                                <Setter Property="Background" Value="#F0F0F0"/>
                                <Setter Property="TextBlock.Foreground" Value="#999999"/>
                            </Style>
                        </Button.Styles>
                    </Button>

                    <!-- Status Message - Success -->
                    <Border Background="#E8F5E9"
                            CornerRadius="4"
                            Padding="12"
                            IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                        <Border.IsVisible>
                            <MultiBinding Converter="{x:Static BoolConverters.And}">
                                <Binding Path="StatusMessage" Converter="{x:Static StringConverters.IsNotNullOrEmpty}"/>
                                <Binding Path="!HasError"/>
                            </MultiBinding>
                        </Border.IsVisible>
                        <TextBlock Text="{Binding StatusMessage}"
                                   TextWrapping="Wrap"
                                   Foreground="#2E7D32"/>
                    </Border>
                    
                    <!-- Status Message - Error -->
                    <Border Background="#FFEBEE"
                            CornerRadius="4"
                            Padding="12">
                        <Border.IsVisible>
                            <MultiBinding Converter="{x:Static BoolConverters.And}">
                                <Binding Path="StatusMessage" Converter="{x:Static StringConverters.IsNotNullOrEmpty}"/>
                                <Binding Path="HasError"/>
                            </MultiBinding>
                        </Border.IsVisible>
                        <TextBlock Text="{Binding StatusMessage}"
                                   TextWrapping="Wrap"
                                   Foreground="#C62828"/>
                    </Border>

                    <!-- Loading Indicator -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                Spacing="10"
                                IsVisible="{Binding IsAuthenticating}">
                        <TextBlock Text="â—" FontSize="20" Foreground="#1976D2">
                            <TextBlock.Styles>
                                <Style Selector="TextBlock">
                                    <Style.Animations>
                                        <Animation Duration="0:0:1" IterationCount="Infinite">
                                            <KeyFrame Cue="0%">
                                                <Setter Property="Opacity" Value="1.0"/>
                                            </KeyFrame>
                                            <KeyFrame Cue="50%">
                                                <Setter Property="Opacity" Value="0.3"/>
                                            </KeyFrame>
                                            <KeyFrame Cue="100%">
                                                <Setter Property="Opacity" Value="1.0"/>
                                            </KeyFrame>
                                        </Animation>
                                    </Style.Animations>
                                </Style>
                            </TextBlock.Styles>
                        </TextBlock>
                        <TextBlock Text="Authenticating..." 
                                   VerticalAlignment="Center"
                                   Foreground="#1976D2"/>
                    </StackPanel>
                    
                </StackPanel>
            </Border>

            <!-- Help Text -->
            <TextBlock Text="Enter your Tableau Cloud credentials to manage database connections"
                       HorizontalAlignment="Center"
                       Foreground="#666"
                       FontSize="12"/>
            
        </StackPanel>
    </Border>

</UserControl>
