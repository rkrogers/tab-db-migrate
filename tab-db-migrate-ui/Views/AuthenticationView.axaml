<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:TabDbMigrateUI.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="600"
             x:Class="TabDbMigrateUI.Views.AuthenticationView"
             x:DataType="vm:AuthenticationViewModel">

    <Border Padding="40">
        <Border.Background>
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                <GradientStop Color="#f0f4f8" Offset="0"/>
                <GradientStop Color="#d9e2ec" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <StackPanel MaxWidth="540" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="25">
            
            <!-- Logo/Title Section -->
            <StackPanel Spacing="8" HorizontalAlignment="Center">
                <TextBlock Text="ðŸ“Š" FontSize="48" HorizontalAlignment="Center"/>
                <TextBlock Text="Tableau Connection Manager" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           Foreground="#102A43"/>
                <TextBlock Text="Manage database connections across your Tableau site" 
                           FontSize="14" 
                           HorizontalAlignment="Center"
                           Foreground="#627D98"
                           Margin="0,4,0,0"/>
            </StackPanel>
            
            <!-- Login Form -->
            <Border Background="White" 
                    CornerRadius="12" 
                    Padding="40" 
                    BoxShadow="0 4 20 0 #20000000, 0 2 6 0 #10000000">
                
                <StackPanel Spacing="20">
                    
                    <TextBlock Text="Sign In" 
                               FontSize="20" 
                               FontWeight="SemiBold"
                               Foreground="#102A43"
                               Margin="0,0,0,4"/>
                    
                    <!-- Server URL -->
                    <StackPanel Spacing="6">
                        <TextBlock Text="Tableau Server URL" 
                                   FontWeight="Medium" 
                                   FontSize="13"
                                   Foreground="#334E68"/>
                        <TextBox Text="{Binding ServerUrl}" 
                                 Watermark="https://your-server.online.tableau.com"
                                 IsEnabled="{Binding !IsAuthenticating}"
                                 Height="38"
                                 CornerRadius="6"
                                 BorderThickness="1.5"/>
                    </StackPanel>

                    <!-- PAT Token Name -->
                    <StackPanel Spacing="6">
                        <TextBlock Text="PAT Token Name" 
                                   FontWeight="Medium" 
                                   FontSize="13"
                                   Foreground="#334E68"/>
                        <TextBox Text="{Binding TokenName}" 
                                 Watermark="Your token name"
                                 IsEnabled="{Binding !IsAuthenticating}"
                                 Height="38"
                                 CornerRadius="6"
                                 BorderThickness="1.5"/>
                    </StackPanel>

                    <!-- PAT Token Secret -->
                    <StackPanel Spacing="6">
                        <TextBlock Text="PAT Token Secret" 
                                   FontWeight="Medium" 
                                   FontSize="13"
                                   Foreground="#334E68"/>
                        <TextBox Text="{Binding TokenSecret}" 
                                 Watermark="Your token secret"
                                 PasswordChar="â—"
                                 IsEnabled="{Binding !IsAuthenticating}"
                                 Height="38"
                                 CornerRadius="6"
                                 BorderThickness="1.5"/>
                    </StackPanel>

                    <!-- Site Name -->
                    <StackPanel Spacing="6">
                        <TextBlock Text="Site Name (Optional)" 
                                   FontWeight="Medium" 
                                   FontSize="13"
                                   Foreground="#334E68"/>
                        <TextBox Text="{Binding SiteName}" 
                                 Watermark="Leave blank for default site"
                                 IsEnabled="{Binding !IsAuthenticating}"
                                 Height="38"
                                 CornerRadius="6"
                                 BorderThickness="1.5"/>
                        <TextBlock Text="Leave blank for default site" 
                                   FontSize="12" 
                                   Foreground="#627D98"/>
                    </StackPanel>

                    <!-- Remember Credentials -->
                    <CheckBox IsChecked="{Binding RememberCredentials}"
                              IsEnabled="{Binding !IsAuthenticating}"
                              Margin="0,4,0,0">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <TextBlock Text="ðŸ’¾" FontSize="14" VerticalAlignment="Center"/>
                            <TextBlock Text="Remember my credentials" 
                                       FontSize="13"
                                       Foreground="#334E68"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </CheckBox>

                    <!-- Connect Button -->
                    <Button Command="{Binding ConnectCommand}"
                            Content="Connect to Tableau"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            Height="44"
                            Margin="0,8,0,0"
                            FontWeight="SemiBold"
                            FontSize="14"
                            CornerRadius="6"
                            Background="#1976D2"
                            Foreground="White">
                        <Button.Styles>
                            <Style Selector="Button:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="#1565C0"/>
                                <Setter Property="TextBlock.Foreground" Value="White"/>
                            </Style>
                            <Style Selector="Button:pressed /template/ ContentPresenter">
                                <Setter Property="Background" Value="#0D47A1"/>
                                <Setter Property="TextBlock.Foreground" Value="White"/>
                            </Style>
                            <Style Selector="Button:disabled /template/ ContentPresenter">
                                <Setter Property="Background" Value="#BDBDBD"/>
                                <Setter Property="TextBlock.Foreground" Value="White"/>
                            </Style>
                        </Button.Styles>
                    </Button>

                    <!-- Status Message - Success -->
                    <Border Background="#E8F5E9"
                            CornerRadius="4"
                            Padding="12"
                            IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                        <Border.IsVisible>
                            <MultiBinding Converter="{x:Static BoolConverters.And}">
                                <Binding Path="StatusMessage" Converter="{x:Static StringConverters.IsNotNullOrEmpty}"/>
                                <Binding Path="!HasError"/>
                            </MultiBinding>
                        </Border.IsVisible>
                        <TextBlock Text="{Binding StatusMessage}"
                                   TextWrapping="Wrap"
                                   Foreground="#2E7D32"/>
                    </Border>
                    
                    <!-- Status Message - Error -->
                    <Border Background="#FFEBEE"
                            CornerRadius="4"
                            Padding="12">
                        <Border.IsVisible>
                            <MultiBinding Converter="{x:Static BoolConverters.And}">
                                <Binding Path="StatusMessage" Converter="{x:Static StringConverters.IsNotNullOrEmpty}"/>
                                <Binding Path="HasError"/>
                            </MultiBinding>
                        </Border.IsVisible>
                        <TextBlock Text="{Binding StatusMessage}"
                                   TextWrapping="Wrap"
                                   Foreground="#C62828"/>
                    </Border>

                    <!-- Loading Indicator -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                Spacing="10"
                                IsVisible="{Binding IsAuthenticating}">
                        <TextBlock Text="â—" FontSize="20" Foreground="#1976D2">
                            <TextBlock.Styles>
                                <Style Selector="TextBlock">
                                    <Style.Animations>
                                        <Animation Duration="0:0:1" IterationCount="Infinite">
                                            <KeyFrame Cue="0%">
                                                <Setter Property="Opacity" Value="1.0"/>
                                            </KeyFrame>
                                            <KeyFrame Cue="50%">
                                                <Setter Property="Opacity" Value="0.3"/>
                                            </KeyFrame>
                                            <KeyFrame Cue="100%">
                                                <Setter Property="Opacity" Value="1.0"/>
                                            </KeyFrame>
                                        </Animation>
                                    </Style.Animations>
                                </Style>
                            </TextBlock.Styles>
                        </TextBlock>
                        <TextBlock Text="Authenticating..." 
                                   VerticalAlignment="Center"
                                   Foreground="#1976D2"/>
                    </StackPanel>
                    
                </StackPanel>
            </Border>

            <!-- Help Text -->
            <TextBlock Text="Enter your Tableau Cloud credentials to manage database connections"
                       HorizontalAlignment="Center"
                       Foreground="#666"
                       FontSize="12"/>
            
        </StackPanel>
    </Border>

</UserControl>
