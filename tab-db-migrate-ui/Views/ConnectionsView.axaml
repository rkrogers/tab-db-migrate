<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:TabDbMigrateUI.ViewModels"
             xmlns:models="using:TabDbMigrateUI.Models"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="TabDbMigrateUI.Views.ConnectionsView"
             x:DataType="vm:ConnectionsViewModel">

    <Border Background="#F5F5F5">
        <Grid RowDefinitions="Auto,*" Margin="24">
            
            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="White" 
                    CornerRadius="0" 
                    Padding="20" 
                    Margin="0,0,0,16"
                    BorderBrush="#CCCCCC"
                    BorderThickness="1">
                <StackPanel Spacing="8">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="ðŸ“Š" FontSize="22" VerticalAlignment="Center"/>
                        <TextBlock Text="Connection Management" 
                                   FontSize="20" 
                                   FontWeight="SemiBold"
                                   Foreground="#1F77B4"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                
                <!-- Status Message - Success -->
                <Border Background="#E3F2FD"
                        CornerRadius="0"
                        Padding="12"
                        BorderBrush="#90CAF9"
                        BorderThickness="1">
                    <Border.IsVisible>
                        <MultiBinding Converter="{x:Static BoolConverters.And}">
                            <Binding Path="StatusMessage" Converter="{x:Static StringConverters.IsNotNullOrEmpty}"/>
                            <Binding Path="!HasError"/>
                        </MultiBinding>
                    </Border.IsVisible>
                    <TextBlock Text="{Binding StatusMessage}"
                               TextWrapping="Wrap"
                               Foreground="#1565C0"/>
                </Border>
                
                <!-- Status Message - Error -->
                <Border Background="#FFEBEE"
                        CornerRadius="0"
                        Padding="12"
                        BorderBrush="#FFCDD2"
                        BorderThickness="1">
                    <Border.IsVisible>
                        <MultiBinding Converter="{x:Static BoolConverters.And}">
                            <Binding Path="StatusMessage" Converter="{x:Static StringConverters.IsNotNullOrEmpty}"/>
                            <Binding Path="HasError"/>
                        </MultiBinding>
                    </Border.IsVisible>
                    <TextBlock Text="{Binding StatusMessage}"
                               TextWrapping="Wrap"
                               Foreground="#C62828"/>
                </Border>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" ColumnDefinitions="2*,3*">
            
            <!-- Left Panel: Connection List -->
            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="0" 
                    Padding="20" 
                    Margin="0,0,12,0"
                    BorderBrush="#CCCCCC"
                    BorderThickness="1">
                
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Spacing="4" Margin="0,0,0,14">
                        <TextBlock Text="Unique Connections" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="#333333"/>
                        <TextBlock Text="Select a connection to update" 
                                   FontSize="12" 
                                   Foreground="#666666"/>
                    </StackPanel>
                    
                    <!-- Loading Indicator -->
                    <StackPanel DockPanel.Dock="Top"
                                Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                Spacing="10"
                                Margin="0,20"
                                IsVisible="{Binding IsLoading}">
                        <TextBlock Text="â—" FontSize="20" Foreground="#1976D2">
                            <TextBlock.Styles>
                                <Style Selector="TextBlock">
                                    <Style.Animations>
                                        <Animation Duration="0:0:1" IterationCount="Infinite">
                                            <KeyFrame Cue="0%">
                                                <Setter Property="Opacity" Value="1.0"/>
                                            </KeyFrame>
                                            <KeyFrame Cue="50%">
                                                <Setter Property="Opacity" Value="0.3"/>
                                            </KeyFrame>
                                            <KeyFrame Cue="100%">
                                                <Setter Property="Opacity" Value="1.0"/>
                                            </KeyFrame>
                                        </Animation>
                                    </Style.Animations>
                                </Style>
                            </TextBlock.Styles>
                        </TextBlock>
                        <TextBlock Text="Loading connections..." 
                                   VerticalAlignment="Center"
                                   Foreground="#1976D2"/>
                    </StackPanel>
                    
                    <!-- Connection List -->
                    <ListBox ItemsSource="{Binding Connections}"
                             SelectedItem="{Binding SelectedConnection}"
                             IsVisible="{Binding !IsLoading}"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListBox.Styles>
                            <Style Selector="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0,0,0,8"/>
                            </Style>
                            <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                        </ListBox.Styles>
                        <ListBox.ItemTemplate>
                            <DataTemplate x:DataType="models:UniqueConnection">
                                <Border Padding="10" 
                                        CornerRadius="0"
                                        Background="#F8F9FA"
                                        BorderBrush="#999999"
                                        BorderThickness="1">
                                    <Border.Styles>
                                        <Style Selector="Border:pointerover">
                                            <Setter Property="Background" Value="#E7F3FF"/>
                                            <Setter Property="BorderBrush" Value="#90CAF9"/>
                                        </Style>
                                    </Border.Styles>
                                    <StackPanel Spacing="8">
                                        <!-- Server Address -->
                                        <TextBlock Text="{Binding ServerAddress}" 
                                                   FontWeight="SemiBold"
                                                   FontSize="14"
                                                   Foreground="#102A43"
                                                   TextTrimming="CharacterEllipsis"/>
                                        
                                        <!-- Port and User Info -->
                                        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto" ColumnSpacing="8" RowSpacing="4">
                                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                                       Text="Port:" 
                                                       FontSize="12" 
                                                       Foreground="#627D98"
                                                       FontWeight="Medium"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                                       Text="{Binding ServerPort}" 
                                                       FontSize="12" 
                                                       Foreground="#486581"/>
                                            
                                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                                       Text="User:" 
                                                       FontSize="12" 
                                                       Foreground="#627D98"
                                                       FontWeight="Medium"/>
                                            <TextBlock Grid.Row="1" Grid.Column="1" 
                                                       Text="{Binding UserName}" 
                                                       FontSize="12" 
                                                       Foreground="#486581"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </Grid>
                                        
                                        <!-- Counts Badge -->
                                        <Border Background="#E3F2FD" 
                                                CornerRadius="0" 
                                                Padding="6,2"
                                                BorderBrush="#90CAF9"
                                                BorderThickness="1"
                                                HorizontalAlignment="Left">
                                            <StackPanel Orientation="Horizontal" Spacing="12">
                                                <StackPanel Orientation="Horizontal" Spacing="4">
                                                    <TextBlock Text="ðŸ“Š" FontSize="12" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding DataSourceCount}" 
                                                               FontSize="12" 
                                                               FontWeight="Bold" 
                                                               Foreground="#1565C0"
                                                               VerticalAlignment="Center"/>
                                                    <TextBlock Text="DS" 
                                                               FontSize="11" 
                                                               Foreground="#1976D2"
                                                               VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Spacing="4">
                                                    <TextBlock Text="ðŸ“ˆ" FontSize="12" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding WorkbookCount}" 
                                                               FontSize="12" 
                                                               FontWeight="Bold" 
                                                               Foreground="#1565C0"
                                                               VerticalAlignment="Center"/>
                                                    <TextBlock Text="WB" 
                                                               FontSize="11" 
                                                               Foreground="#1976D2"
                                                               VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>

            <!-- Right Panel: Update Form -->
            <Border Grid.Column="1" 
                    Background="White" 
                    CornerRadius="0" 
                    Padding="20" 
                    Margin="12,0,0,0"
                    BorderBrush="#CCCCCC"
                    BorderThickness="1">
                
                <ScrollViewer>
                    <StackPanel Spacing="20" IsEnabled="{Binding !IsUpdating}">
                        
                        <StackPanel Spacing="4">
                            <TextBlock Text="Update Connection" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="#333333"/>
                            <TextBlock Text="Modify database connection details" 
                                       FontSize="12" 
                                       Foreground="#666666"/>
                        </StackPanel>

                        <!-- Selection Info -->
                        <Border Background="#E3F2FD" 
                                CornerRadius="0" 
                                Padding="12"
                                BorderBrush="#90CAF9"
                                BorderThickness="1"
                                IsVisible="{Binding SelectedConnection, Converter={x:Static ObjectConverters.IsNotNull}}">
                            <StackPanel Spacing="10">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="ðŸŽ¯" FontSize="16" VerticalAlignment="Center"/>
                                    <TextBlock Text="Selected Connection" 
                                               FontSize="13" 
                                               FontWeight="SemiBold"
                                               Foreground="#0D47A1"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock Text="{Binding SelectedConnection.DisplayName}" 
                                           FontWeight="Medium"
                                           FontSize="14"
                                           Foreground="#102A43"/>
                                <Border Background="#BBDEFB" 
                                        CornerRadius="0" 
                                        Padding="6,2"
                                        BorderBrush="#90CAF9"
                                        BorderThickness="1">
                                    <TextBlock FontSize="12" Foreground="#0D47A1" FontWeight="Medium">
                                        <Run Text="Affects"/>
                                        <Run Text="{Binding SelectedConnection.TotalAffectedAssets}"/>
                                        <Run Text="data sources and workbooks"/>
                                    </TextBlock>
                                </Border>
                            </StackPanel>
                        </Border>

                        <!-- No Selection Message -->
                        <Border Background="#FFF8E1" 
                                CornerRadius="0" 
                                Padding="12"
                                BorderBrush="#FFD54F"
                                BorderThickness="1"
                                IsVisible="{Binding SelectedConnection, Converter={x:Static ObjectConverters.IsNull}}">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <TextBlock Text="ðŸ‘ˆ" FontSize="18" VerticalAlignment="Center"/>
                                <TextBlock Text="Select a connection from the list to update it"
                                           Foreground="#F57F17"
                                           FontSize="13"
                                           TextWrapping="Wrap"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Update Form -->
                        <StackPanel Spacing="18" 
                                    IsVisible="{Binding SelectedConnection, Converter={x:Static ObjectConverters.IsNotNull}}">
                            
                            <!-- New Server Address -->
                            <StackPanel Spacing="5">
                                <TextBlock Text="New Server Address:" 
                                           FontWeight="Normal" 
                                           FontSize="12"
                                           Foreground="#333333"/>
                                <TextBox Text="{Binding NewServerAddress}" 
                                         Watermark="e.g., myserver.database.windows.net"
                                         Height="26"
                                         CornerRadius="0"
                                         BorderThickness="1"
                                         BorderBrush="#999999"/>
                            </StackPanel>

                            <!-- New Server Port -->
                            <StackPanel Spacing="5">
                                <TextBlock Text="New Server Port:" 
                                           FontWeight="Normal" 
                                           FontSize="12"
                                           Foreground="#333333"/>
                                <TextBox Text="{Binding NewServerPort}" 
                                         Watermark="e.g., 1433"
                                         Height="26"
                                         CornerRadius="0"
                                         BorderThickness="1"
                                         BorderBrush="#999999"/>
                            </StackPanel>

                            <!-- New Username -->
                            <StackPanel Spacing="5">
                                <TextBlock Text="New Username:" 
                                           FontWeight="Normal" 
                                           FontSize="12"
                                           Foreground="#333333"/>
                                <TextBox Text="{Binding NewUserName}" 
                                         Watermark="Database username"
                                         Height="26"
                                         CornerRadius="0"
                                         BorderThickness="1"
                                         BorderBrush="#999999"/>
                            </StackPanel>

                            <!-- New Password -->
                            <StackPanel Spacing="5">
                                <TextBlock Text="New Password:" 
                                           FontWeight="Normal" 
                                           FontSize="12"
                                           Foreground="#333333"/>
                                <TextBox Text="{Binding NewPassword}" 
                                         Watermark="Database password"
                                         PasswordChar="â—"
                                         Height="26"
                                         CornerRadius="0"
                                         BorderThickness="1"
                                         BorderBrush="#999999"/>
                            </StackPanel>

                            <!-- Update Button -->
                            <Button Command="{Binding UpdateConnectionCommand}"
                                    Content="Update Connections"
                                    HorizontalAlignment="Left"
                                    HorizontalContentAlignment="Center"
                                    Width="150"
                                    Height="28"
                                    Margin="0,12,0,0"
                                    FontWeight="Normal"
                                    FontSize="12"
                                    CornerRadius="0"
                                    Background="#E0E0E0"
                                    Foreground="#000000"
                                    BorderBrush="#999999"
                                    BorderThickness="1">
                                <Button.Styles>
                                    <Style Selector="Button:pointerover /template/ ContentPresenter">
                                        <Setter Property="Background" Value="#D0D0D0"/>
                                        <Setter Property="TextBlock.Foreground" Value="#000000"/>
                                    </Style>
                                    <Style Selector="Button:pressed /template/ ContentPresenter">
                                        <Setter Property="Background" Value="#C0C0C0"/>
                                        <Setter Property="TextBlock.Foreground" Value="#000000"/>
                                    </Style>
                                    <Style Selector="Button:disabled /template/ ContentPresenter">
                                        <Setter Property="Background" Value="#F0F0F0"/>
                                        <Setter Property="TextBlock.Foreground" Value="#999999"/>
                                    </Style>
                                </Button.Styles>
                            </Button>

                            <!-- Updating Indicator -->
                            <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Center" 
                                        Spacing="10"
                                        IsVisible="{Binding IsUpdating}">
                                <TextBlock Text="â—" FontSize="20" Foreground="#1976D2">
                                    <TextBlock.Styles>
                                        <Style Selector="TextBlock">
                                            <Style.Animations>
                                                <Animation Duration="0:0:1" IterationCount="Infinite">
                                                    <KeyFrame Cue="0%">
                                                        <Setter Property="Opacity" Value="1.0"/>
                                                    </KeyFrame>
                                                    <KeyFrame Cue="50%">
                                                        <Setter Property="Opacity" Value="0.3"/>
                                                    </KeyFrame>
                                                    <KeyFrame Cue="100%">
                                                        <Setter Property="Opacity" Value="1.0"/>
                                                    </KeyFrame>
                                                </Animation>
                                            </Style.Animations>
                                        </Style>
                                    </TextBlock.Styles>
                                </TextBlock>
                                <TextBlock Text="Updating connections..." 
                                           VerticalAlignment="Center"
                                           Foreground="#1976D2"/>
                            </StackPanel>

                            <!-- Update Results -->
                            <Border Background="#F5F5F5" 
                                    CornerRadius="0" 
                                    Padding="12"
                                    BorderBrush="#CCCCCC"
                                    BorderThickness="1"
                                    IsVisible="{Binding UpdateResults, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                                <ScrollViewer MaxHeight="300">
                                    <TextBlock Text="{Binding UpdateResults}"
                                               FontFamily="Consolas,Courier New,monospace"
                                               FontSize="11"
                                               TextWrapping="Wrap"/>
                                </ScrollViewer>
                            </Border>

                            <!-- Affected Assets -->
                            <Expander Header="View Affected Assets" 
                                      IsExpanded="False">
                                <Border Background="#FFFFFF" 
                                        CornerRadius="0" 
                                        Padding="12"
                                        Margin="0,10,0,0"
                                        BorderBrush="#CCCCCC"
                                        BorderThickness="1">
                                    <StackPanel Spacing="8">
                                        <TextBlock Text="Affected Assets:" 
                                                   FontSize="12" 
                                                   FontWeight="SemiBold"
                                                   Foreground="#334E68"/>
                                        <ScrollViewer MaxHeight="200">
                                            <ItemsControl ItemsSource="{Binding SelectedConnection.AffectedAssets}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="#F8F9FA"
                                                                CornerRadius="0"
                                                                Padding="6,2"
                                                                BorderBrush="#CCCCCC"
                                                                BorderThickness="1"
                                                                Margin="0,2">
                                                            <TextBlock Text="{Binding}" 
                                                                       FontSize="12"
                                                                       Foreground="#102A43"
                                                                       TextWrapping="Wrap"/>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                    </StackPanel>
                                </Border>
                            </Expander>

                        </StackPanel>
                        
                    </StackPanel>
                </ScrollViewer>
            </Border>

        </Grid>

    </Grid>
    </Border>

</UserControl>
